<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <TextView
                android:text="Metas"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="+"
                android:textSize="32sp"
                android:textColor="?attr/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editNewGoal"
                android:hint="Criar nova meta..."
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:background="@drawable/rounded_input_dark_background"
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="?android:attr/textColorSecondary"
                android:padding="12dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveGoal"
                android:text="Guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                app:cornerRadius="12dp"
                app:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvGoalsPlaceholder"
            android:text="Toque numa meta (Casa, Trabalho, Saúde) para ver e marcar as sub-tarefas com ✓ ou X."
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/linearLayoutGoalsContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/goal_category_header" android:id="@+id/headerCasa"/>
            <LinearLayout
                android:id="@+id/linearLayoutSubtaskCasa"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="16dp"/>

            <include layout="@layout/goal_category_header" android:id="@+id/headerTrabalho"/>
            <LinearLayout
                android:id="@+id/linearLayoutSubtaskTrabalho"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="16dp"/>

            <include layout="@layout/goal_category_header" android:id="@+id/headerSaude"/>
            <LinearLayout
                android:id="@+id/linearLayoutSubtaskSaude"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>